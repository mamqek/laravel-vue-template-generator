# ==== Database (shared values) ====
DB_NAME=directus
DB_USER=directus
DB_PASS=super_secure_db_password

# Postgres image needs these:
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASS}

# Directus needs these:
DB_CLIENT=pg
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASS}

# ==== CORS ====
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=*

# ==== Storage ====
